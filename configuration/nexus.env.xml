<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- This is a special config file for properties used to monitor status of the service -->
<configuration>
    <property>
        <name>nexus.local.dir</name>
        <value>/usr/local</value>
        <display-name>Nexus Local</display-name>
        <description>Nexus Local Directory</description>
    </property>
    <!-- nexus home -->
    <property>
        <name>nexus.home.dir</name>
        <value>/usr/local/nexus</value>
        <display-name>Nexus Home</display-name>
        <description>Nexus Home Directory</description>
    </property>
    <!-- nexus pid dir -->
    <property>
        <name>nexus.pid.dir</name>
        <value>/var/run/nexus/</value>
        <display-name>Nexus Pid Dir</display-name>
        <description>Nexus Pid Directory</description>
    </property>
    <!-- nexus log dir -->
    <property>
        <name>nexus.log.dir</name>
        <value>/var/log/nexus</value>
        <display-name>Nexus Log Dir</display-name>
        <description>Nexus Log Directory</description>
    </property>
    <!-- nexus user -->
    <property>
        <name>nexus.user</name>
        <value>nexus</value>
        <property-type>USER</property-type>
        <display-name>Nexus User</display-name>
        <description>Nexus User</description>
    </property>
    <!-- nexus user -->
    <property>
        <name>nexus.group</name>
        <value>nexus</value>
        <property-type>GROUP</property-type>
        <display-name>Nexus Group</display-name>
        <description>Nexus Group</description>
    </property>
    <!-- nexus package name -->
    <property>
        <name>nexus.package.name</name>
        <value>nexus.tgz</value>
        <display-name>Nexus Package Name</display-name>
        <description>rename Nexus package file</description>
    </property>
    <!-- nexus  download path -->
    <property>
        <name>nexus.package.download.path</name>
        <value>https://sonatype-download.global.ssl.fastly.net/nexus/3/nexus-3.6.1-02-unix.tar.gz</value>
        <display-name>Nexus Package Download path</display-name>
        <description>The installation package download path for Nexus</description>
    </property>
    <!-- nexus log file -->
    <property>
        <name>nexus.log.install.file</name>
        <value>nexus-install.log</value>
        <display-name>Nexus Install Log</display-name>
        <description>Nexus Install Log File</description>
    </property>
    <!-- nexus pid file -->
    <property>
        <name>nexus.pid.file</name>
        <value>nexus.pid</value>
        <display-name>Nexus Pid File</display-name>
        <description>Nexus Pid File</description>
    </property>
</configuration>
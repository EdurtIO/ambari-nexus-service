<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- This is a special config file for properties used to monitor status of the service -->
<configuration>
    <!-- default java sdk home -->
    <property>
        <name>java.home</name>
        <value>/usr/jdk64/jdk1.8.0_60/</value>
        <display-name>Java Home</display-name>
        <description>Java SDK Home</description>
    </property>
    <!-- java sdk download path -->
    <property>
        <name>java.package.download.path</name>
        <value>https://sonatype-download.global.ssl.fastly.net/nexus/3/nexus-3.6.1-02-unix.tar.gz</value>
        <display-name>Java Package Download path</display-name>
        <description>The installation package download path for java</description>
    </property>
</configuration>